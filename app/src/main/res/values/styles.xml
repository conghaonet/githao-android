<?xml version="1.0" encoding="utf-8"?>
<resources>
    <color name="light_color_primary">@color/material_blue_500</color>
    <color name="light_color_primary_light">@color/material_blue_300</color>
    <color name="light_color_primary_blur">#DD3F51B5</color>
    <color name="light_color_primary_dark">@color/material_blue_700</color>
    <color name="light_color_accent">@color/material_blue_accent_700</color>
    <color name="light_window_background">#F4F4F4</color>
    <color name="light_icon_color">@color/material_light_black</color>
    <color name="light_card_background">@color/material_white</color>
    <color name="light_title_color">@color/material_light_white</color>
    <color name="light_subtitle_color">@color/material_grey_350</color>
    <color name="light_selected_color">@color/material_grey_350</color>
    <color name="light_text_color_primary">#212121</color>
    <color name="light_text_color_secondary">#757575</color>

    <!-- Base application theme. -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/light_color_primary</item>
        <item name="colorPrimaryDark">@color/light_color_primary_dark</item>
        <item name="colorAccent">@color/light_color_accent</item>
        <item name="android:windowBackground">@color/light_window_background</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
        <item name="android:textColorPrimary">@color/light_text_color_primary</item>
        <item name="android:textColorSecondary">@color/light_text_color_secondary</item>
        <item name="android:textColorTertiary">@color/material_grey_700</item>
        <item name="icon_color">@color/light_icon_color</item>
        <item name="card_background">@color/light_card_background</item>
        <item name="title_color">@color/light_title_color</item>
        <item name="subtitle_color">@color/light_subtitle_color</item>
        <item name="selected_color">@color/light_selected_color</item>
        <item name="color_primary_light">@color/light_color_primary_light</item>
        <item name="color_primary_blur">@color/light_color_primary_blur</item>
        <item name="popup_theme">@style/PopupThemeLight</item>
        <item name="appbar_theme">@style/AppbarThemeLight</item>
        <item name="popup_menu_theme">@style/PopupMenuLight</item>
    </style>

    <style name="AppTheme" parent="AppBaseTheme"/>

    <style name="PopupThemeLight" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:colorBackground">@color/light_window_background</item>
    </style>


    <style name="AppbarThemeLight" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
    </style>

    <style name="PopupMenuLight" parent="Widget.AppCompat.Light.PopupMenu">
        <item name="android:popupBackground">@color/light_window_background</item>
    </style>
</resources>
